schema {
    query: Query
}

type Query {
    bookById(id: ID): Book
    companyById(id: ID): Company
    hero(episode: Episode): Character
    human(id : String) : Human
    droid(id: ID!): Droid
}

type Book {
    id: ID
    name: String
    pageCount: Int
    author: Author
    publisher: String
}

type Author {
    id: ID
    firstName: String
    lastName: String
    age: Int
}